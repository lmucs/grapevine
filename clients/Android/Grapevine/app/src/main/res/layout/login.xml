<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cs.lmu.grapevine.activities.Login"
    android:weightSum="1">
    <ImageView
        android:layout_width="@dimen/login_logo"
        android:layout_height="@dimen/login_logo"
        android:background="@drawable/grapevine_logo" />
    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <AutoCompleteTextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_username"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:singleLine="true"
                android:text="champ"/>
            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_password"
                android:imeActionId="@+id/login"
                android:imeOptions="actionUnspecified"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true"
                android:text="bar"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:gravity="center">
                <Button
                    android:id="@+id/email_sign_in_button"
                    android:textAllCaps="false"
                    style="?android:textAppearanceSmall"
                    android:layout_weight=".6"
                    android:layout_width="@dimen/login_button_width"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/login_button_margin_top"
                    android:text="@string/action_sign_in"
                    android:textStyle="bold"/>
                
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:gravity="center">
                <Button
                    android:layout_height="wrap_content"
                    android:layout_width="@dimen/login_button_width"
                    android:text="@string/login_create_account"
                    android:onClick="launchCreateAccountActivity"
                    android:textAllCaps="false"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_weight=".6"
                    android:textColor="@color/create_account"/>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:gravity="center">
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/forgot_password"
                android:id="@+id/forgot_password"
                android:layout_gravity="center_horizontal"
                style="?android:attr/borderlessButtonStyle"
                android:textColor="@color/create_account"
                android:layout_weight=".6"
                android:textAllCaps="false"
                android:onClick="launchForgottenPasswordActivity" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/login_status"
                android:textColor="@color/red"/>
            <ProgressBar
                android:id="@+id/login_progress"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="@dimen/progress_spinner_size"
                android:layout_height="@dimen/progress_spinner_size"
                android:layout_gravity="center"
                android:visibility="invisible"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>