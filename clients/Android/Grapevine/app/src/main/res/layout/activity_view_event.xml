<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="cs.lmu.grapevine.activities.ViewEvent"
    android:orientation="vertical">

    <TextView  android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/single_event_title"
        android:text="An Event"
        android:textSize="@dimen/event_title_size"/>
    <TextView  android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2015-21-02"
        android:id="@+id/single_event_date"/>
    <TextView  android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/single_event_location"/>
    <TextView  android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/single_event_url"
        android:autoLink="web"/>
    <!--TODO: MAke this scrollable-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/single_event_original_post"
        android:text="@string/lorem_ipsum"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/link_to_event"
        android:text="View on Facebook"/>
</LinearLayout>
